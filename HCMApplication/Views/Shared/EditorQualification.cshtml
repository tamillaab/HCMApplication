
@model HCMApplication.Models.Qualification

@{
    ViewData["Title"] = ViewBag.CreateMode ? "CreateQualification" : "EditQualification";
}

<form asp-action="@(ViewBag.CreateMode ? "CreateQualification" : "EditQualification")" method="post">
    <input name="original.QualificationId" value="@Model?.QualificationId" type="hidden" />
    <input name="original.FIO" value="@Model?.FIO" type="hidden" required />
    <input name="original.CourseName" value="@Model?.CourseName" type="hidden" required />
    <input name="original.DateOfStart" value="@Model?.DateOfStart" type="hidden" />
    <input name="original.Grade" value="@Model?.Grade" type="hidden" />
        <div class="form-group">
        <label asp-for="FIO">ФИО</label>
        <select class="form-control" asp-for="FIO" asp-items="@ViewBag.Employees"></select>
    </div>
    <div class="form-group">
        <label asp-for="CourseName">Название курса</label>
        <input asp-for="CourseName" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="DateOfStart">Дата начала</label>
        <input asp-for="DateOfStart" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Grade">Общий балл</label>
        <input asp-for="Grade" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Сохранить</button>
        <a asp-action="Qualification" class="btn btn-secondary">Отменить</a>
    </div>
</form>